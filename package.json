{
 "name": "OttoBlockly",
 "version": "1.4.5",
 "description": "Blockly and Arduino coding standalone App for Otto DIY robot",
 "author": "Otto DIY and Builder community",
 "license": "GNU General Public License v2.0",
 "main": "electronApp.js",
 "keywords": [
  "blockly",
  "BLOCKLY",
  "arduino",
  "ARDUINO",
  "esp32",
  "ESP32",
  "esp8266",
  "ESP8266",
  "electron",
  "ELECTRON",
  "OttoDIY",
  "serialport",
  "SERIALPORT",
  "electron-builder",
  "electron-updater",
  "PYTHON",
  "python",
  "PYFLAKES",
  "pyflakes",
  "ampy",
  "AMPY",
  "microbit",
  "MICROBIT"
 ],
 "scripts": {
  "postinstall": "electron-builder install-app-deps",
  "start": "electron .",
  "compiler": "build --win --ia32",
  "publier": "build --win --ia32 -p always"
 },
 "build": {
  "appId": "com.electron.blocklino",
  "asar": false,
  "directories": {
   "buildResources": "./build",
   "output": "../dist"
  },
  "nsis": {
   "installerIcon": "build/install.ico",
   "uninstallerIcon": "build/app.ico",
   "oneClick": false,
   "perMachine": true,
   "deleteAppDataOnUninstall": true,
   "allowToChangeInstallationDirectory": true,
   "runAfterFinish": true,
   "include": "build/blocklino.nsh"
  },
  "win": {
   "target": [
    "portable",
    "nsis",
    "zip"
   ],
   "icon": "build/app.ico"
  },
  "mac": {
   "category": "public.app-category.graphics-design",
   "icon": "build/file.icns"
  },
  "dmg": {
   "contents": [
    {
     "x": 120,
     "y": 220
    },
    {
     "x": 410,
     "y": 220,
     "type": "link",
     "path": "/Applications"
    }
   ]
  },
  "linux": {
   "target": [
    "AppImage",
    "deb"
   ]
  },
  "fileAssociations": {
   "ext": "bloc",
   "name": "BLOC File",
   "role": "Editor",
   "icon": "build/file.ico"
  },
  "extraFiles": [
   "www",
   "compilation",
   "pilotes",
   "README.md",
   "LICENSE.md",
   "config.json"
  ],
  "extraResources": [
   "dev-app-update.yml",
   "app-update.yml"
  ],
  "publish": [
   {
    "provider": "github",
    "repo": "blockly",
    "owner": "OttoDIY",
    "releaseType": "release"
   }
  ]
 },
 "repository": {
  "type": "git",
  "url": "https://github.com/OttoDIY/blockly"
 },
 "bugs": {
  "url": "https://github.com/OttoDIY/blockly/issues"
 },
 "devDependencies": {
  "electron": "4.1.1",
  "electron-builder": "^20.39.0",
  "electron-installer-dmg": "^3.0.0"
 },
 "dependencies": {
  "ajv": "6.10.0",
  "child_process": "1.0.2",
  "electron-updater": "4.0.6",
  "serialport": "7.1.4"
 }
}
